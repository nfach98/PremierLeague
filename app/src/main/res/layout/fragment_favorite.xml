<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.favorite.FavoriteFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/fav_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabTextAppearance="@style/Theme.PremierLeague.TabTextAppearance"
        app:tabRippleColor="@android:color/transparent"
        app:tabTextColor="@android:color/darker_gray"
        app:tabSelectedTextColor="@color/purple_dark"
        app:tabIndicatorColor="@color/pink"
        app:tabIndicatorHeight="4dp"
        app:tabPaddingStart="16dp"
        app:tabPaddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/fav_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fav_tabs"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>