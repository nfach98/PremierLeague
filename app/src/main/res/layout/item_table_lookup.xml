<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View
        android:id="@+id/bar"
        android:layout_width="4dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"
        tools:background="@color/green"/>

    <TextView
        android:id="@+id/tv_pos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        tools:text="1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"/>

    <ImageView
        android:id="@+id/iv_team"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="20dp"
        tools:src="@drawable/ic_premier_head_24dp"
        app:layout_constraintStart_toEndOf="@id/tv_pos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_team"
        app:layout_constraintBottom_toTopOf="@id/bottom_line" />

    <TextView
        android:id="@+id/tv_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/purple_dark"
        android:ellipsize="end"
        tools:text="Man City"
        app:layout_constraintStart_toEndOf="@id/iv_team"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"
        app:layout_constraintEnd_toStartOf="@id/tv_play"/>

    <TextView
        android:id="@+id/tv_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        android:textColor="@color/purple_dark"
        android:gravity="center"
        tools:text="1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_team"
        app:layout_constraintEnd_toStartOf="@id/tv_win"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"/>

    <TextView
        android:id="@+id/tv_win"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        android:textColor="@color/purple_dark"
        android:gravity="center"
        tools:text="1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintStart_toEndOf="@id/tv_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_draw"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"/>

    <TextView
        android:id="@+id/tv_draw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        android:textColor="@color/purple_dark"
        android:gravity="center"
        tools:text="1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintStart_toEndOf="@id/tv_win"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_loss"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"/>

    <TextView
        android:id="@+id/tv_loss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        android:textColor="@color/purple_dark"
        android:gravity="center"
        tools:text="1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintStart_toEndOf="@id/tv_draw"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_gd"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"/>

    <TextView
        android:id="@+id/tv_gd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textSize="16sp"
        android:textColor="@color/purple_dark"
        android:gravity="center"
        tools:text="1"
        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintStart_toEndOf="@id/tv_loss"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_point"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"/>

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/purple_dark"
        tools:text="1"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_line"/>

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>