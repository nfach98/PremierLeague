<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nfach98.premierleague">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PremierLeague">
        <activity
            android:name="com.nfach98.premierleague.ui.detail.club.ClubActivity"
            android:theme="@style/Theme.PremierLeague.NoActionBar"/>
        <activity
            android:name="com.nfach98.premierleague.ui.detail.player.PlayerActivity"
            android:theme="@style/Theme.PremierLeague.NoActionBar"/>
        <activity
            android:name=".ui.detail.match.MatchActivity"
            android:theme="@style/Theme.PremierLeague.NoActionBar"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.PremierLeague.NoAnim.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/Theme.PremierLeague.NoAnim" />
    </application>

</manifest>